{
	"name": "@mvc-react/components",
	"version": "1.0.0",
	"description": "Framework for developing MVC-based React components",
	"homepage": "https://github.com/Grod56/mvc-react/tree/main/packages/components",
	"author": {
		"name": "Garikai Gumbo",
		"email": "providenceuniversalstudios@gmail.com"
	},
	"license": "MIT",
	"keywords": [
		"mvc",
		"model",
		"view",
		"controller",
		"components",
		"react"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Grod56/mvc-react.git",
		"directory": "packages/components"
	},
	"type": "module",
	"module": "./dist/index.mjs",
	"main": "./dist/index.cjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist/**/*"
	],
	"exports": {
		".": {
			"import": "./dist/index.mjs",
			"require": "./dist/index.cjs",
			"types": "./dist/index.d.ts"
		}
	},
	"scripts": {
		"clean": "del-cli ./dist",
		"build": "npm run clean && rollup -c",
		"prepack": "npm run build",
		"prepublishOnly": "npm test",
		"test": "jest",
		"test:cov": "jest --coverage --coverageReporters='json-summary' --coverageProvider='v8'"
	},
	"peerDependencies": {
		"@mvc-react/mvc": "^2.1.1",
		"react": "^19.1.0"
	},
	"devDependencies": {
		"@rollup/plugin-babel": "^6.0.4",
		"@rollup/plugin-typescript": "^12.1.2",
		"@testing-library/dom": "^10.4.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/react": "^16.3.0",
		"@types/jest": "^29.5.14",
		"@types/node": "^22.15.18",
		"@types/react": "^19.1.4",
		"del-cli": "^6.0.0",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"rollup": "^4.40.2",
		"rollup-plugin-delete": "^3.0.1",
		"rollup-plugin-dts": "^6.2.1",
		"rollup-plugin-sourcemaps": "^0.6.3",
		"ts-jest": "^29.3.4",
		"ts-node": "^10.9.2",
		"tslib": "^2.8.1"
	}
}
